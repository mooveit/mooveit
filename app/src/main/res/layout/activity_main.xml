<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- TOOL BAR -->

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        style="@style/MyDarkToolbarStyle"
        android:background="#27AEF0">

        <!-- LOGO -->

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/moove"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"  />
    </android.support.v7.widget.Toolbar>

    <!-- WHITE SPACE -->

    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="5mm"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_below="@id/my_awesome_toolbar"-->
        <!--android:background="@drawable/dashboard"/>-->

    <!-- DASHBOARD GRAY BUTTONS -->

    <Button
        android:id="@+id/dash"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="9dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/dashboardnotactive"/>

    <Button
        android:id="@+id/reward"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="9dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/dash"
        android:background="@drawable/rewardsnotactive"/>

    <Button
        android:id="@+id/merchant"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/merchantnotactive"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/reward" />

    <Button
        android:id="@+id/account"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="9dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/merchant"
        android:background="@drawable/accountnotactive" />

    <ImageView
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_above="@+id/dash"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <!-- LIST ON MAIN DASHBOARD -->

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_awesome_toolbar"
        android:layout_above="@id/border"
        android:layout_alignParentStart="true" />


</RelativeLayout>