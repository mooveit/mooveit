<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="40mm"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/stepIcon"
        android:layout_width="15mm"
        android:layout_height="15mm"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:src="@drawable/step" />

    <TextView
        android:id="@+id/step2Line"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/stepIcon"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Description"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/step1Line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/step2Line"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/stepIcon"
        android:gravity="center_vertical"
        android:text="Example application"
        android:textSize="16sp" />

</RelativeLayout>
